# Coolaw DeskFlow - Environment Configuration
# Copy this file to .env and fill in your values

# === LLM Configuration ===
# DashScope (Default - Qwen)
DESKFLOW_LLM_PROVIDER=dashscope
DESKFLOW_DASHSCOPE_API_KEY=sk-your-key-here
DESKFLOW_DASHSCOPE_MODEL=qwen-max

# Anthropic (optional fallback)
# DESKFLOW_ANTHROPIC_API_KEY=sk-ant-your-key-here
# DESKFLOW_ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenAI Compatible (optional fallback)
# DESKFLOW_OPENAI_API_KEY=sk-your-key-here
# DESKFLOW_OPENAI_BASE_URL=https://api.openai.com/v1
# DESKFLOW_OPENAI_MODEL=gpt-4o

# === LLM Parameters ===
DESKFLOW_LLM_MAX_TOKENS=4096
DESKFLOW_LLM_TEMPERATURE=0.7

# === Server Configuration ===
DESKFLOW_HOST=127.0.0.1
DESKFLOW_PORT=8420
DESKFLOW_LOG_LEVEL=INFO

# === Memory Configuration ===
DESKFLOW_DB_PATH=data/db/deskflow.db
DESKFLOW_MEMORY_CACHE_SIZE=1000

# === Tool Configuration ===
DESKFLOW_TOOL_TIMEOUT=30
DESKFLOW_TOOL_MAX_PARALLEL=3

# === Security ===
DESKFLOW_ALLOWED_PATHS=~/Projects,~/Documents
